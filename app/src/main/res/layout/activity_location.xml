<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:padding="16sp"
    tools:context=".ui.menghitung_pakan.LocationActivity">

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Lokasi Kami"
        android:textStyle="bold"
        android:textSize="18sp"
        android:textColor="@color/black" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="16dp"
        android:text="Jl. Jayeng Kusuma 5, Kel. Ngujang, Kec. Kedungwaru, Kabupaten Tulungagung, Jawa Timur 66229. "
        android:textSize="16sp"
        android:textColor="@color/black" />

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:weightSum="2"
        android:layout_marginTop="10dp"
        android:orientation="horizontal">
        <TextView
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_marginTop="16dp"
            android:layout_weight="2"
            android:text="Telp : 0822-2842-4348"
            android:textSize="16sp"
            android:textColor="@color/black" />

        <ImageButton
            android:layout_width="35dp"
            android:layout_height="35dp"
            android:id="@+id/phoneBtn"
            app:tint="@color/white"
            android:background="@drawable/bg_rounded_btn"
            android:backgroundTint="@color/green"
            android:layout_marginTop="10dp"
            android:src="@drawable/ic_baseline_local_phone_24" />


    </LinearLayout>

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="16dp"
        android:text="Email : sales@cvbarokah.com"
        android:textSize="16sp"
        android:textColor="@color/black" />

    <Button
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@drawable/bg_rounded_btn"
        android:text="Kembali"
        android:textStyle="bold"
        android:layout_marginTop="30dp"
        android:id="@+id/backButton" />

  </LinearLayout>